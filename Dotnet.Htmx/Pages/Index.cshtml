@page
@model IndexModel
@{
    ViewData["Title"] = "Task CRUD with htmx";
}

<h2>Tasks</h2>

<form method="post" hx-post="?handler=Create" hx-target="#tasksTable" hx-swap="outerHTML">
    <input type="text" asp-for="TaskItem.Title" placeholder="Task Title" />
    <label>
        <input type="checkbox" asp-for="TaskItem.IsComplete" /> Completed
    </label>
    <input type="submit" value="Add Task" />
</form>

<div id="tasksTable">
    <partial name="_TaskItemsTable" model="Model.TaskItems" />
</div>

<div id="editTaskItem"></div>